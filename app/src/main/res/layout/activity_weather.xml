<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9C46A"
    tools:context=".WeatherActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5sp"
        android:layout_weight="1"
        app:cardBackgroundColor="#F4A261"
        app:cardElevation="10dp"
        android:padding="8sp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                >
                <TextView
                    android:id="@+id/tv_day0"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="16sp"
                    android:textColor="#eee"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_width="48sp"
                    android:layout_height="48sp"
                    android:layout_weight="1"
                    android:id="@+id/iv_icon_0"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_dayweather_0"
                android:layout_width="match_parent"

                android:textSize="16sp"
                android:textColor="#eee"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F4A261"
            app:cardElevation="10dp"
            android:padding="8sp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:id="@+id/tv_day1"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#eee"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:layout_width="48sp"
                        android:layout_height="48sp"
                        android:layout_weight="1"
                        android:id="@+id/iv_icon_1"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_dayweather_1"
                    android:layout_width="match_parent"

                    android:textSize="16sp"
                    android:textColor="#eee"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            app:cardBackgroundColor="#F4A261"
            app:cardElevation="10dp"
            android:padding="8sp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    >
                    <TextView
                        android:id="@+id/tv_day2"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#eee"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:layout_width="48sp"
                        android:layout_height="48sp"
                        android:layout_weight="1"
                        android:id="@+id/iv_icon_2"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_dayweather_2"
                    android:layout_width="match_parent"

                    android:textSize="16sp"
                    android:textColor="#eee"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>